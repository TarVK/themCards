{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "./build/",
        "rootDir": "./src/",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2017",
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "jsx",
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true,
        "skipLibCheck": true
    },
    "types": ["node"],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build",
        "demo",
        "examples",
        "**/src/client/**"
    ]
}
